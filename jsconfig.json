{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"],
    "jsx": "preserve",
    "module": "esnext",
    "target": "es6",
    "checkJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "exclude": ["node_modules", ".next", "out"],
  "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "types/**/*.d.ts"]
} 